---
export interface Props {
  nombre: string;
  descripcion: string;
  url: string;
  precio: number;
  imagen: string;
}
const { nombre, descripcion, url, precio, imagen } = Astro.props;
---

<div class="guitarra">
  <img src={imagen} alt={`Imagen de guitara ${nombre}`} />
  <div class="contenido">
    <h3>{nombre}</h3>
    <p class="descripcion">{descripcion}</p>
    <p class="precio">${precio}</p>
    <a href={`/guitarras/${url}`} class="enlace">Ver Producto</a>
  </div>
</div>

<style>
  .guitarra {
    display: grid;
    grid-template-columns: 2fr 3fr;
    gap: 1rem;
    align-items: center;
    max-width: 70rem;
    margin: 0 auto;
  }

  .contenido {
    padding: 1rem;
  }

  .contenido h3 {
    font-size: 3rem;
    text-transform: uppercase;
    color: var(--primary);
  }

  .descripcion {
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 6;
    overflow: hidden;
    font-size: 1.8rem;
  }

  .precio {
    color: var(--primary);
    font-size: 4rem;
    margin: 0;
    font-weight: 900;
  }

  .enlace {
    margin-top: 2rem;
    display: block;
    background-color: var(--black);
    color: var(--white);
    text-decoration: none;
    padding: 1rem;
    text-align: center;
    text-transform: uppercase;
    font-size: 1.4rem;
    font-weight: 700;
    transition-property: background-color;
    transition-duration: 300ms;
  }

  .enlace:hover {
    background-color: var(--primary);
  }
</style>
